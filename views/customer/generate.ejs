    <div class="btn-group mt-2">
        <form id="exportForm" action="/generatePdf" method="POST" target="_blank">
            <input type="hidden" name="customerId" value="<%= customer._id %>">
            <button type="submit" class="btn btn-primary">
                Download Details
            </button>
        </form>
    </div>
</div>